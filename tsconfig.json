{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
  },
}
