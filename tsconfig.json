{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es6"],
    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "src",
    "paths": {
      "~/*": ["./*"],
      "custom-module-type": ["types/custom-module-type"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "build",
    "newLine": "lf",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitAny": true,
    "typeRoots": ["src/@types", "./node_modules/@types"],
  }
}
